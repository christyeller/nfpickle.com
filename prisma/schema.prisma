generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContactSubmission {
  id        String   @id
  name      String
  email     String
  subject   String?
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Donation {
  id                    String    @id
  donorName             String
  donorEmail            String
  donorPhone            String?
  donorMessage          String?
  donorAddress          String?
  amount                Float
  donationType          String
  frequency             String?
  stripePaymentIntentId String?   @unique
  stripeSubscriptionId  String?   @unique
  stripeCustomerId      String?
  status                String    @default("pending")
  paymentStatus         String    @default("incomplete")
  receiptUrl            String?
  lastPaymentDate       DateTime?
  nextPaymentDate       DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime
}

model Event {
  id                   String   @id
  title                String
  slug                 String   @unique
  eventType            String   @default("open-play")
  description          String?
  startDate            DateTime
  endDate              DateTime
  locationName         String   @default("Paonia Town Park")
  locationAddress      String?
  capacity             Int?
  cost                 Float?   @default(0)
  registrationRequired Boolean  @default(false)
  isRecurring          Boolean  @default(false)
  recurringPattern     String?
  status               String   @default("published")
  createdAt            DateTime @default(now())
  updatedAt            DateTime
  featuredImageId      String?
  Media                Media?   @relation(fields: [featuredImageId], references: [id])
}

model Gallery {
  id           String         @id
  title        String
  slug         String         @unique
  description  String?
  status       String         @default("published")
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  GalleryImage GalleryImage[]

  @@index([slug])
  @@index([status])
}

model GalleryImage {
  id        String   @id
  galleryId String
  mediaId   String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  Gallery   Gallery  @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  Media     Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@unique([galleryId, mediaId])
  @@index([galleryId, order])
}

model Media {
  id           String         @id
  cloudinaryId String?        @unique
  url          String
  secureUrl    String?
  format       String
  width        Int?
  height       Int?
  bytes        Int
  altText      String?
  caption      String?
  uploadedBy   String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  category     MediaCategory  @default(CONTENT)
  r2Key        String?        @unique
  tags         String[]
  Event        Event[]
  GalleryImage GalleryImage[]
  User         User?          @relation(fields: [uploadedBy], references: [id])
  Page         Page[]
  Post         Post[]

  @@index([category])
  @@index([cloudinaryId])
  @@index([createdAt])
  @@index([r2Key])
}

model Member {
  id               String   @id
  email            String   @unique
  firstName        String
  lastName         String
  phone            String?
  skillLevel       String?
  membershipTier   String   @default("free")
  membershipStatus String   @default("active")
  joinedAt         DateTime @default(now())
  createdAt        DateTime @default(now())
  updatedAt        DateTime
}

model Page {
  id              String   @id
  title           String
  slug            String   @unique
  content         String
  metaTitle       String?
  metaDescription String?
  status          String   @default("published")
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  featuredImageId String?
  Media           Media?   @relation(fields: [featuredImageId], references: [id])
}

model Post {
  id              String   @id
  title           String
  slug            String   @unique
  excerpt         String?
  content         String
  featuredImg     String?
  status          String   @default("published")
  publishedAt     DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  featuredImageId String?
  Media           Media?   @relation(fields: [featuredImageId], references: [id])
}

model SiteSettings {
  id              String  @id @default("settings")
  clubName        String  @default("North Fork Pickleball Club")
  tagline         String  @default("Serving the North Fork Valley of Colorado")
  contactEmail    String?
  facebookUrl     String?
  instagramUrl    String?
  primaryLocation String  @default("Paonia Town Park")
  aboutText       String?
}

model User {
  id             String   @id
  email          String   @unique
  hashedPassword String
  name           String?
  role           String   @default("admin")
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  Media          Media[]
}

enum MediaCategory {
  CONTENT
  FEATURED
  GALLERY
}
